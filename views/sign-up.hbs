<div class="container">

    <div class="card">
        <h1>Sign Up</h1>

        <form action="/auth/sign-up" method='POST'>
            <input type="email" name='email' required='true'>
            <br>
            <input type="password" name='password' required='true'>
            <br>
            <br>
            <button type='submit'>Create my User Account</button>
        </form>
        <br>
            <br> {{#if error}}
            <p>ERROR: {{error}}</p>
            {{/if}}
    </div>
</div>